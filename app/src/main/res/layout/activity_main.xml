<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfood"
    tools:context="com.example.mgluc.androidshoppracadyplomowa.MainActivity">

  <LinearLayout
      android:orientation="vertical"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/linearLayout2">


      <ImageView
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:adjustViewBounds="false"
          android:src="@drawable/foodlogo" />

      <TextView
          android:id="@+id/sloganWeFeedYou"
          android:layout_width="wrap_content"
          android:layout_height="41dp"
          android:gravity="center"
          android:text="@string/slogan"
          android:textColor="@color/fbutton_color_wet_asphalt" />

  </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="rejestracja"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:background="@android:color/holo_blue_light"></Button>



        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="logowanie"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:background="@android:color/holo_green_light"></Button>

    </LinearLayout>
</RelativeLayout>
